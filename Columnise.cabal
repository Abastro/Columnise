name:                Columnise
version:             0.1.0.0
-- synopsis:
-- description:
-- bug-reports:
license:             BSD3
license-file:        LICENSE
author:              Abastro
maintainer:          abab9579@naver.com
category:            Database
build-type:          Simple
extra-source-files:  CHANGELOG.md

library
  exposed-modules:
      Data.Column
      Data.Impl.RefTuple
      Data.Impl.Utils
      Data.Impl.Classes
      Data.Impl.Column
      Data.Impl.Singles
      Data.Impl.Aggregates
      Data.Handle.SQLHandle
  -- other-modules:
  default-extensions:
      FlexibleContexts
      FlexibleInstances
      ConstraintKinds
      TypeApplications
      MultiParamTypeClasses
      DeriveFunctor
      DeriveFoldable
      DeriveTraversable
      DerivingVia
      TupleSections
  build-depends:
      base >=4.7 && <5
    , bytestring ==0.10.*
    , containers ==0.6.*
    , direct-sqlite ==2.3.*
    , transformers ==0.5.*
    , mtl ==2.2.*
    , text ==1.2.*
  ghc-options:
    -W
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite Columnise-test
  default-language:    Haskell2010
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             ColumnTest.hs
  default-extensions:
      FlexibleContexts
      FlexibleInstances
  build-depends:
      base >=4.13 && <4.14
    , mtl >=2.2 && <2.3
